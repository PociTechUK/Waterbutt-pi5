# DEST: Makefile$(info USING NEW MAKEFILE v3)CXX ?= g++CXXFLAGS ?= -O2 -std=gnu++17 -DNDEBUGCXXFLAGS += -IincludeSRC := $(shell find src -name '*.cpp')OBJ := $(SRC:%.cpp=%.o)BIN := .build/programall: $(BIN)$(BIN): $(OBJ)	@mkdir -p $(dir $@)	@echo "Linking -> $(BIN)"	$(CXX) $(CXXFLAGS) -o $@ $(OBJ)%.o: %.cpp	@echo "Compiling -> $<"	$(CXX) $(CXXFLAGS) -c $< -o $@clean:	rm -rf .build $(OBJ)