// DEST: src/main.cpp#include <iostream>// forward-declare; impl is in src/demo/hello.cppvoid hello();int main() {    std::cout << "=== Waterbutt Demo Main v2 (countdown) ===\n";    for (int i = 3; i >= 1; --i) {        std::cout << "Countdown: " << i << std::endl;    }    hello();    std::cout << "=== Finished v2 ===\n";    return 0;}